#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../.store/asciidoctor-pdf-upgraded-paged@1.0.0-alpha.17/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../.store/asciidoctor-pdf-upgraded-paged@1.0.0-alpha.17/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../.store/asciidoctor-pdf-upgraded-paged@1.0.0-alpha.17/node_modules/asciidoctor-pdf-upgraded-paged/bin/asciidoctor-web-pdf" "$@"
else
  exec node  "$basedir/../.store/asciidoctor-pdf-upgraded-paged@1.0.0-alpha.17/node_modules/asciidoctor-pdf-upgraded-paged/bin/asciidoctor-web-pdf" "$@"
fi
